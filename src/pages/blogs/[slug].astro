---
import Navbar from "../../components/navbar.astro";
import Layout from "../../layout/Layout.astro";
import client from "../../lib/sanity";
import { urlFor } from "../../lib/image";
import { formatDate } from "../../lib/date";
import groq from "groq";
let { slug } = Astro.params;

const { authors, categories, body, mainImage, publishedAt, title } =
	await client.fetch(
		groq`*[_type == "post" && slug.current == $slug][0] {
  "authors": authors[]->{
    slug,name,image
  },
  "categories": categories[]->{
    title,
    slug
  },
  body,
  mainImage,
  publishedAt,
  title
}`,
		{
			slug,
		}
	);
import PortableText from "../../components/PortableText.astro";
---

<Layout transition:name={slug}>
	<article
		class="mt-[20vh] my-auto prose md:prose-lg prose-pink no-underline prose-invert prose-headings:text-xl prose-img:rounded-xl prose-img:mx-auto prose-img:my-3 prose-figure:mx-auto text-justify prose-pre:text-left prose-headings:flex prose-headings:items-center prose-headings:gap-2 prose-headings:mt-10 w-full flex flex-col justify-center mx-auto pt-[10vh] pb-[5vh] px-6 md:px-0"
	>
		<h1>{title}</h1>
		<p>Author</p>
		{
			authors.map((author) => (
				<>
					<a
						href={`/author/${author.slug.current}`}
						class="text-blue-500 no-underline space-x-5 flex flex-row items-center w-1/2"
					>
							<img
								src={urlFor(authors[0].image).url()}
								alt="avatar"
								class="relative inline-block object-fill object-center  transform scale-150 w-16 h-20 rounded-full"
							/>
							<span>
								<span class="text-lg no-underline text-nowrap font-bold text-brand">
									{authors[0].name}
								</span>
								<span class="text-md text-text/80 block">
									{formatDate(publishedAt)}
								</span>
							</span>
					</a>
				</>
			))
		}
		<p>Published At {formatDate(publishedAt)}</p>
		{
			categories.map((category) => (
				<a
					href={`/category/${category.slug.current}`}
					class="text-blue-500 no-underline"
				>
					{category.title}
				</a>
			))
		}
		<img src={urlFor(mainImage).url()} class="border-2 w-[60%]" />
		<PortableText portableText={body} class="w-[60%]"/>
	</article>
</Layout>
