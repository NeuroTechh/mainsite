---
import {
	Astronav,
	MenuItems,
	MenuIcon,
	Dropdown,
	DropdownItems,
	DropdownSubmenu,
} from "astro-navbar";
import { Image } from "astro:assets";
---

<header
	class="lg:flex justify-between p-3 px-10 text-lg md:text-2xl gap-5 w-full fixed top-0 bg-grain [background-size:60px_60px] [background-position:0_0] bg-zinc-950 items-center z-[2147483638] bg-opacity-90 backdrop-filter backdrop-blur-lg border-b border-text/30 md:border-0"
	id="navbarr"
>
	<Astronav closeOnClick>
		<div
			class="flex w-full lg:w-auto justify-between items-center align-top"
		>
			<a href="/">
				<Image
					src="https://neurotechh.live/logo.png"
					width={100}
					height={100}
					alt="Logo"
					class="relative inline-block size-14 !rounded-full object-cover object-center"
				/></a
			>
			<div class="block lg:hidden space-y-4">
				<MenuIcon class="size-7 text-text" />
			</div>
		</div>
		<MenuItems
			class="hidden lg:flex h-full font-bold md:font-normal align-top text-xl"
		>
			<ul
				class="flex flex-col gap-5 lg:flex-row lg:gap-5 font-incognito font-semibold"
			>
				<li>
					<a href="/" class="hover:underline">Home</a>
				</li>
				<li>
					<a href="/blogs" class="hover:underline">Blogs</a>
				</li>
				<li>
					<a href="/#contact" class="hover:underline">Contact</a>
				</li>
			</ul>
		</MenuItems>
	</Astronav>
</header>
