---
import {
	Astronav,
	MenuItems,
	MenuIcon,
	Dropdown,
	DropdownItems,
	DropdownSubmenu,
} from "astro-navbar";
import { Image } from "astro:assets";
---

<header
	class="lg:flex justify-between p-3 md:p-5 text-lg md:text-2xl gap-5 w-full fixed top-0 bg-background  bg-[length:200px_200px] items-center z-50 rounded-b-lg bg-opacity-60 backdrop-filter backdrop-blur-lg"
>
	<Astronav closeOnClick>
		<div class="flex w-full lg:w-auto justify-between items-center">
			<Image
				src="https://neurotechh.live/logo.png"
				width={100}
				height={100}
				alt="Logo"
				class="relative inline-block h-12 w-12 !rounded-full object-cover object-center"
			/>
			<div class="block lg:hidden">
				<MenuIcon class="w-4 h-4 text-gray-800" />
			</div>
		</div>
		<MenuItems class="hidden lg:flex">
			<ul class="flex flex-col lg:flex-row lg:gap-5">
				<li>
					<a href="/">Home</a>
				</li>
				<li>
					<a href="/blogs">Blogs</a>
				</li>
				<li>
					<a href="/#contact">Contact</a>
				</li>
			</ul>
		</MenuItems>
	</Astronav>
</header>
